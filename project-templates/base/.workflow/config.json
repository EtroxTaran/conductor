{
  "observability": {
    "action_log_enabled": true,
    "tracer_enabled": true,
    "error_aggregation_enabled": true
  },
  "log_management": {
    "auto_cleanup_on_start": true,
    "max_log_size_mb": 10,
    "max_backup_count": 5,
    "archive_after_days": 7,
    "delete_archives_after_days": 30,
    "compress_archives": true
  },
  "handoff": {
    "auto_generate_on_escalation": true,
    "auto_generate_on_pause": true,
    "include_last_n_actions": 20,
    "include_file_snapshots": false
  }
}
