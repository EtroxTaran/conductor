#!/bin/sh

#
# Gradle wrapper script for Unix
#

# Resolve the script directory
SCRIPT_DIR=$(dirname "$0")
cd "$SCRIPT_DIR" || exit

# Download gradle wrapper if not present
if [ ! -f gradle/wrapper/gradle-wrapper.jar ]; then
    echo "Downloading Gradle wrapper..."
    mkdir -p gradle/wrapper
    curl -sL https://services.gradle.org/distributions/gradle-8.11.1-bin.zip -o gradle.zip
    unzip -q gradle.zip
    mv gradle-8.11.1/lib/gradle-wrapper-*.jar gradle/wrapper/gradle-wrapper.jar
    rm -rf gradle-8.11.1 gradle.zip
fi

# Run gradle
java -jar gradle/wrapper/gradle-wrapper.jar "$@"
