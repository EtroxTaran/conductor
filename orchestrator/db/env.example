# SurrealDB Configuration for Meta-Architect
# Copy this file to .env and update values

# ==============================================
# Connection Settings
# ==============================================

# SurrealDB WebSocket URL
# Local development: ws://localhost:8000/rpc
# Remote (Dokploy): wss://surrealdb.your-domain.com/rpc
SURREAL_URL=ws://localhost:8000/rpc

# Namespace for project isolation
SURREAL_NAMESPACE=orchestrator

# Default database (each project creates its own database)
SURREAL_DATABASE=default

# ==============================================
# Authentication
# ==============================================

# Root user credentials (for development)
SURREAL_USER=root
SURREAL_PASS=your-secure-password

# ==============================================
# Connection Pool Settings
# ==============================================

# Number of connections in pool
SURREAL_POOL_SIZE=5

# Connection timeout (seconds)
SURREAL_CONNECT_TIMEOUT=10.0

# Query timeout (seconds)
SURREAL_QUERY_TIMEOUT=30.0

# Retry attempts on connection failure
SURREAL_RETRY_ATTEMPTS=3

# Delay between retries (seconds)
SURREAL_RETRY_DELAY=1.0

# ==============================================
# Features
# ==============================================

# Enable Live Query subscriptions for real-time monitoring
SURREAL_LIVE_QUERIES=true
