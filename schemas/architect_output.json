{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArchitectOutput",
  "type": "object",
  "required": ["agent", "assessment", "score"],
  "properties": {
    "agent": { "const": "architect" },
    "assessment": { "enum": ["approve", "needs_changes", "reject"] },
    "score": { "type": "number", "minimum": 1, "maximum": 10 },
    "architecture_review": {
      "type": "object",
      "properties": {
        "patterns_identified": { "type": "array", "items": { "type": "string" } },
        "scalability_assessment": { "enum": ["good", "adequate", "poor"] },
        "concerns": { "type": "array", "items": { "type": "string" } }
      }
    },
    "summary": { "type": "string" }
  }
}
